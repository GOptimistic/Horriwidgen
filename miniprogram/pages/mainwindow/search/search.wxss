/* miniprogram/pages/mainwindow/search/search.wxss */
.search-top{
  flex-direction:row;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 10%;
  width: 100%;
  border-color: rgba(112, 112, 112, 0.781);
  border-width: 10rpx;
}

.search-time{
  flex-direction:column;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ECECEC;
  height: 40px;
  width: 23%;
  border-radius: 10px;
  border-left: 10px;
  margin-top: 10px;
  margin-right: 10px;
}

.date_box{
  font-size: 30rpx;
}
.date_box>view{
  width: 50%;
  margin: 20rpx 0;
  padding: 20rpx 0;
  background: #fff;
  box-sizing: border-box;
  text-align: center;
  border-right: 1rpx solid #c3c3c3;
}
.date_box>view:nth-child(2){
  border-right: none;
  border-left: 1rpx solid #c3c3c3;
}
.date_box>view text{
  padding-left: 10rpx;
}

.search-input{
  flex-direction:row;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 40px;
  width: 60%;
  background-color: #ECECEC;
  border-radius: 10px;
  margin-top: 10px;
}

.search-input-city{
  width: 30%;
}

.search-input-city-text{
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-input-line{
  height: 80%;
  width: 0.5%;
  background-color: #252125b6;
}

.search-keyword{
  height: 40px;
}

.search-keyword-plhd{
  font-size: 12px;
}

.search-line{
  height: 3%;
  width: 100%;
  background-color: #252125b6;
}