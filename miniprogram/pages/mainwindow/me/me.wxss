.header {
    margin: 90rpx 0 90rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}

.header image {
    width: 200rpx;
    height: 200rpx;
}

.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}

.text {
    display: block;
    color: #9d9d9d;
    /* margin-top: 40rpx; */
}

.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}

.userinfo {
  margin-left: 5%;
  margin-top: 70rpx;
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: transparent;
  border-radius: 5%;
  border: 1px solid rgba(204, 201, 201, 0.351);
}

.userinfo-avatar {
  width: 108rpx;
  height: 108rpx;
  margin: 40rpx;
  border-radius: 50%;
}

.row-section{
  margin-top: 70rpx;
  margin-bottom: 40rpx;
  width: 50%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.col-section{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.col-line{
  margin-top: 5%;
  height: 90%;
  width: 3rpx;
  background:#9d9d9d;
}

.person-list {
  display: flex;
  flex-direction: column;
  align-items: left;
}

.person-line {
  width: 90%;
  height: 2rpx;
  background: lightgray;
  margin-left: 5%;
}

.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100rpx;
}

.item-image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 65%;
}

.item-text {
  color: gray;
  font-size: 30rpx;
  margin-left: 5%;
}

.separate{
  height: 60rpx;
}