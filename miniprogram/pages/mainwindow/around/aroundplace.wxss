.bottom{
    border-radius: 20rpx;
    margin: 50rpx 50rpx;
    font-size: 35rpx;
    background-color: #2B5F75;
    color: white;
}

.map_container{
  position: absolute;
  top: 0;
  bottom: 0rpx;
  left: 0;
  right: 0;
  height: 900rpx;
}
.map{
  width: 100%;
  height: 100%;
}
.map_text{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0px;
  height: 200rpx;
  background: #fff;
  padding: 0 15px;

}
text{
  margin: 5px 0;
  display: block;
  font-size:12px;
}
.h1{
  margin: 15px 0;
  font-size:15px;
}
.row{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.col{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}