.headdate {
  height: 30px;
  background-color: white;
  flex: 1;
  text-align: center;
  line-height: 30px;
}

.headbox {
  display: flex;
  display: -webkit-flex;
  border-bottom: 1px solid #e5e5e5;
}

.headbox2 {
  display: flex;
  position: fixed;
  width: 750rpx;
  display: -webkit-flex;
  border-bottom: 1px solid #e5e5e5;
  background-color: white;
  z-index: 2;
}

.mouthhead {
  height: 88rpx;
  color: #f66;
  background-color: #f4f4f4;
  width: 750rpx;
  line-height: 88rpx;
  text-align: center;
}

.mouth {
