.daybox {
  background-color: white;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.day {
  width: 107rpx;
  height: 107rpx;
  line-height: 87rpx;
  text-align: center;
  display: inline-block;
  position: relative;
  top: 0;
  overflow: hidden;
  color: #54708b;
  font-size: 34rpx;
}

.day2 {
  color: #04babe;
  width: 107rpx;
  height: 107rpx;
  line-height: 107rpx;
  text-align: center;
  display: inline-block;
  position: relative;
  bottom: 0;
  margin-top: 0;
}

.actname {
  color: #04babe;
  position: absolute;
  font-size: 20rpx;
  top: 10rpx;
  width: 107rpx;
  text-align: center;
}

.actname2 {
  color: #04babe;
  position: absolute;
  bottom: -20rpx;
  font-size: 26rpx;
  width: 107rpx;
  text-align: center;
}

.bc {
  background-color: #f66;
  color: white !important;
}

.bc2 {
  color: white !important;
}

.bc3 {
  background: #facdcd !important;
}

.none88 {
  width: 750rpx;
  height: 90rpx;
}

.fixedbtn {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #f66;
  text-align: center;
  padding: 20rpx 0;
  color: #fff;
}
